<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.watersystem.RegistrationScreen">

    <TextView
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/name"
        android:textSize="18sp"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/nameInput"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText2" />

    <TextView
        android:text="Email "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/email"
        android:textSize="18sp"
        android:layout_below="@+id/nameInput"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="User ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserID"
        android:layout_alignEnd="@+id/emailInput"
        android:layout_alignTop="@+id/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="UserID"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBaseline="@+id/nameInput"
        android:layout_alignBottom="@+id/nameInput"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:hint="Email"
        android:layout_below="@+id/email" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/password"
        android:textSize="18sp"
        android:layout_below="@+id/emailInput"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Account Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classification"
        android:textSize="18sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/passwordInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/passwordInput"
        android:hint="Password"
        android:layout_below="@+id/password"
        android:layout_alignEnd="@+id/emailInput"
        android:layout_marginEnd="9dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelProfile"
        android:layout_marginLeft="20dp"
        android:layout_alignStart="@+id/UserID"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/save" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classificationSpinner"
        android:layout_below="@+id/classification"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/classificationSpinner"
        android:layout_alignEnd="@+id/classification" />

</RelativeLayout>
