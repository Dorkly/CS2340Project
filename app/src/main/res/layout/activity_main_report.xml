<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:background="#FFF"
    tools:context="project.waterSystem.AppScreen">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Return to Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Logout"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/report"
        android:layout_marginTop="13dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Create Source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/waterSource"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Create Purity"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:background="@drawable/button_shape"
        android:id="@+id/waterPurity"
        android:fontFamily="sans-serif-light"
        android:minWidth="90dip"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#FFF"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/waterSource"
        android:layout_alignBottom="@+id/waterSource"
        android:layout_toEndOf="@+id/listSourceReports" />

    <Button
        android:text="View Source"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/listSourceReports"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_below="@+id/waterSource"
        android:layout_alignStart="@+id/waterSource"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/listPurityReports" />

    <Button
        android:text="View Purity"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/listPurityReports"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_below="@+id/waterPurity"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/waterSource"
        android:layout_alignStart="@+id/waterPurity" />

    <Button
        android:text="Water Availability"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/waterAvailability"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_below="@+id/listSourceReports"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/listSourceReports" />


</RelativeLayout >