<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:background="#FFF"
    tools:context="project.watersystem.AppScreen">

    <Button
        android:text="  Create New Water Purity Report  "

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/waterPurity"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minWidth="90dip"
        android:width="265dp" />

    <Button
        android:text=" Create New Water Source Report "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/waterSource"
        android:layout_below="@+id/waterPurity"
        android:layout_centerHorizontal="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minWidth="90dip"
        android:width="265dp" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Return to Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Logout"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/report"
        android:layout_marginTop="31dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />


</RelativeLayout >