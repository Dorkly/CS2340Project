<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_app_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:background="#FFF"
    tools:context="project.waterSystem.Controller.AppScreen">

    <android.support.v7.widget.Toolbar
        android:text="Reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#039BE5"
        android:theme="@menu/menu_main"
        app:titleTextColor="#FFF"
        android:fitsSystemWindows="true"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <info.hoang8f.widget.FButton
        android:text="Return to Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Logout"
        fbutton:buttonColor="#039BE5"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="210dp"
        app:srcCompat="@drawable/report"
        android:id="@+id/imageView2"
        android:layout_below="@+id/toolbar" />

    <info.hoang8f.widget.FButton
        android:text="Create Source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        fbutton:buttonColor="#039BE5"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/waterSource"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="59dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <info.hoang8f.widget.FButton
        android:text="Create Purity"
        fbutton:buttonColor="#039BE5"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:background="@drawable/button_shape"
        android:id="@+id/waterPurity"
        android:fontFamily="sans-serif-light"
        android:minWidth="90dip"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/waterSource"
        android:layout_alignBottom="@+id/waterSource"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="58dp" />

    <info.hoang8f.widget.FButton
        android:text="View Source"
        fbutton:buttonColor="#039BE5"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/listSourceReports"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_alignTop="@+id/listPurityReports"
        android:layout_alignStart="@+id/waterSource" />

    <info.hoang8f.widget.FButton
        android:text="View Purity"
        fbutton:buttonColor="#039BE5"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:id="@+id/listPurityReports"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/waterPurity"
        android:layout_alignStart="@+id/waterPurity" />

    <info.hoang8f.widget.FButton
        android:text="Hist Report"
        fbutton:buttonColor="#039BE5"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:id="@+id/histReport"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_alignTop="@+id/waterAvailability"
        android:layout_alignStart="@+id/listPurityReports" />

    <info.hoang8f.widget.FButton
        android:text="Water Availability"
        fbutton:buttonColor="#039BE5"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:id="@+id/waterAvailability"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_below="@+id/listSourceReports"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/listSourceReports" />


</RelativeLayout >