<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:background="#FFF"
    tools:context="project.waterSystem.Controller.WelcomeScreen">

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="wrap_content"
        android:layout_height="505dp"
        android:background="@drawable/drip"
        android:id="@+id/gifTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="@string/dripdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFF"
        android:layout_marginTop="145dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText"
        android:id="@+id/textView" />

    <info.hoang8f.widget.FButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/login"
        android:textColor="#FFF"
        android:textSize="20sp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/registrationButton"
        android:layout_centerHorizontal="true" />

    <info.hoang8f.widget.FButton
        android:id="@+id/forgotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="forgot"
        android:textColor="#FFF"
        android:textSize="20sp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        tools:ignore="HardcodedText"
        android:layout_alignBottom="@+id/registrationButton"
        android:layout_toEndOf="@+id/textView" />


    <info.hoang8f.widget.FButton
        android:id="@+id/registrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/registration"
        android:textColor="#FFF"
        android:textSize="15sp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/loginButton" />
</RelativeLayout>
