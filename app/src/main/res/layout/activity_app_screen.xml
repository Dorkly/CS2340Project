<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_app_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:background="#FFF"
    tools:context="project.waterSystem.Controller.AppScreen">


    <info.hoang8f.widget.FButton
        android:id="@+id/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Logout"
        android:width="135dp"
        android:textColor="#FFF"
        android:textSize="12sp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        android:layout_below="@+id/reportsButton"
        android:layout_alignStart="@+id/reportsButton"
        android:layout_marginTop="29dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/reportsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="135dp"
        android:drawableLeft="@drawable/smile"
        android:fontFamily="sans-serif-light"
        android:paddingRight="31dp"
        android:text="Reports"
        android:textColor="#FFF"
        android:textSize="12sp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        android:layout_alignTop="@+id/createProfile"
        android:layout_alignEnd="@+id/gifTextView" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#039BE5"
        app:titleTextColor="#FFF"
        android:theme="@menu/menu_main"
        android:fitsSystemWindows="true"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <info.hoang8f.widget.FButton
        android:id="@+id/createProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="135dp"
        android:drawableLeft="@drawable/smile"
        android:fontFamily="sans-serif-light"
        android:paddingRight="5dp"
        android:text="Create/Edit Profile"
        android:textColor="#FFF"
        android:textSize="12sp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/gifTextView"
        android:layout_alignStart="@+id/gifTextView" />

    <info.hoang8f.widget.FButton
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Settings"
        android:width="135dp"
        android:textColor="#FFF"
        android:textSize="12sp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        android:layout_alignBaseline="@+id/Logout"
        android:layout_alignBottom="@+id/Logout"
        android:layout_alignStart="@+id/createProfile" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/drop"
        android:id="@+id/gifTextView"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
