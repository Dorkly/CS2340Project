<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_source_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.waterSystem.SourceReport">

    <TextView
        android:text="@string/location_water_source"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/locationSourceReport"
        android:layout_below="@+id/waterSourceReport"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/latitude_water_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationSourceReport"
        android:layout_alignStart="@+id/locationSourceReport"
        android:layout_marginTop="18dp"
        android:id="@+id/latitudeLocationSourceReport"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="@string/water_type_water_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/waterTypeSourceReport"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/longitudeLocationSourceReport"
        android:layout_alignStart="@+id/longitudeLocationSourceReport" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/waterConditionSourceReportSpinner"
        android:layout_below="@+id/waterConditionSourceReport"
        android:layout_alignStart="@+id/waterConditionSourceReport" />

    <TextView
        android:text="@string/water_condition_water_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/waterConditionSourceReport"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/waterTypeSourceReportSpinner"
        android:layout_alignStart="@+id/waterTypeSourceReport" />

    <TextView
        android:text="@string/longitude_water_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/longitudeLocationSourceReport"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_below="@+id/latitudeLocationSourceReport"
        android:layout_alignStart="@+id/latitudeLocationSourceReport" />

    <TextView
        android:text="@string/water_source_water_source"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterSourceReport"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/longitudeLocationSourceReportInput"
        android:hint="@string/longitude_range_water_source"
        android:layout_alignBaseline="@+id/longitudeLocationSourceReport"
        android:layout_alignBottom="@+id/longitudeLocationSourceReport"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/report_button_water_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reportSourceReport"
        android:layout_alignBaseline="@+id/cancelSourceReport"
        android:layout_alignBottom="@+id/cancelSourceReport"
        android:layout_below="@+id/waterConditionSourceReportSpinner"
        android:layout_alignStart="@+id/waterConditionSourceReport"
        android:layout_marginStart="60dp" />

    <Button
        android:text="@string/cancel_button_water_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelSourceReport"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/waterConditionSourceReportSpinner"
        android:layout_alignEnd="@+id/waterSourceReport" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/latitudeLocationSourceReportInput"
        android:hint="@string/latitude_range_water_source"
        android:layout_alignBaseline="@+id/latitudeLocationSourceReport"
        android:layout_alignBottom="@+id/latitudeLocationSourceReport"
        android:layout_alignParentEnd="true"
        android:inputType="numberSigned|numberDecimal" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/waterTypeSourceReportSpinner"
        android:layout_below="@+id/waterTypeSourceReport"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
