<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:background="#FFF"
    tools:context="project.waterSystem.Controller.GraphActivity">

    <info.hoang8f.widget.FButton
        android:id="@+id/exitFButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/graphView"
        android:layout_marginRight="20dp"
        android:width="120dp"
        android:fontFamily="sans-serif-light"
        android:text="Exit"
        android:textColor="#FFF"
        android:textSize="15dp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <TextView
        android:id="@+id/graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:text="history graph"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="450dip"
        android:layout_below="@+id/graph" />

    <info.hoang8f.widget.FButton
        android:id="@+id/selectionsFButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/graph"
        android:layout_below="@+id/graphView"
        android:layout_marginRight="20dp"
        android:width="120dp"
        android:fontFamily="sans-serif-light"
        android:text="Selections..."
        android:textColor="#FFF"
        android:textSize="15dp"
        fbutton:buttonColor="#039BE5"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />
</RelativeLayout>